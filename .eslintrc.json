{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "airbnb-base",
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "semi": 0,
    "no-plusplus": "off",
    "operator-linebreak": "off",
    "space-in-parens": "off",
    "implicit-arrow-linebreak": "off",
    "no-bitwise": 0,
    "object-curly-newline": ["error", { "multiline": true }],
    "no-confusing-arrow": "off"
  }
}
